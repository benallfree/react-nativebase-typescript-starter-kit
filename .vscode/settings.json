{
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "standard.enable": false,
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "eslint.options": {
    "extensions": [".html", ".js", ".vue", ".jsx"]
  },
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    }
  ]
}
